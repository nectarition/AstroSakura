---
import Root from "./Root.astro";
import Sidebar from "./Sidebar.astro";
import Footer from "./Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Root title={title}>
  <div class="container">
    <nav class="nav">
      <Sidebar />
    </nav>
    <div class="hero">
      <img class="heroImage" src="/assets/brand/keyvisual.jpg" />
    </div>
  </div>
  <main class="main">
    <slot />
  </main>
  <footer class="footer">
    <Footer />
  </footer>
</Root>

<style lang="scss">
  .container {
    padding: 40px 10%;
    display: grid;
    grid-template-columns: 25% 1fr;
    gap: 40px;

    @media screen and (max-width: 840px) {
      padding: 20px;
      grid-template-columns: unset;
      grid-template-rows: auto auto;
      gap: 20px;
    }

    .hero {
      position: relative;
      text-align: center;

      .heroImage {
        display: inline-block;
        background-color: #c0c0c0;
        width: auto;
        max-width: 100%;
        max-height: 1080px;

        @media screen and (max-width: 840px) {
          max-height: unset;
        }
      }
    }
  }
  .main {
    padding: 40px 10%;
    background-color: #ffffff;
    min-height: 75vh;

    @media screen and (max-width: 840px) {
      grid-column: 1;
      padding: 20px;
    }
  }
  .footer {
  }
</style>
