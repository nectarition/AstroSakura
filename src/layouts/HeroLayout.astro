---
import Root from "./Root.astro";
import Sidebar from "./Sidebar.astro";
import Footer from "./Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Root title={title}>
  <div class="container">
    <nav class="nav">
      <Sidebar />
    </nav>
    <div class="hero">
      <img class="heroImage" src="/assets/keyvisual.jpg" />
    </div>
    <main class="main">
      <slot />
    </main>
  </div>
  <footer class="footer">
    <Footer />
  </footer>
</Root>

<style lang="scss">
  .container {
    padding: 40px 10%;
    display: grid;
    grid-template-columns: 25% 1fr;
    grid-template-rows: auto 1fr;
    gap: 40px;

    @media screen and (max-width: 840px) {
      padding: 20px;
      grid-template-columns: auto;
      grid-template-rows: auto auto 1fr;
      gap: 20px;
    }

    .hero {
      .heroImage {
        display: inline-block;
        background-color: #c0c0c0;
        width: 100%;
      }
    }
    .main {
      grid-column: 1 / 3;
      padding: 40px;
      background-color: #ffffff;

      @media screen and (max-width: 840px) {
        grid-column: 1;
        padding: 20px;
      }
    }
  }
  .footer {
  }
</style>
