---
import dayjs from "dayjs";
import config from "../config";

import Menu from "../components/Menu.astro";

const eventDateTime = config.event.date;
const eventPlace = config.event.place;
const eventContent = config.event.content;
---

<div class="sidebar">
  <div class="meta">
    <div class="meta_logotype">
      <a href="/"><img class="logotype" src="/assets/brand/logotype.svg" /></a>
    </div>
    <div class="meta_item meta_item-date">
      {dayjs(eventDateTime).format("YYYY.MM.DD ddd.")}
    </div>
    <div class="meta_item">
      <span class="label">at</span>
      {eventPlace}
    </div>
    <div class="meta_item">
      <span class="label">content</span>
      {eventContent}
    </div>
  </div>
  <Menu />
</div>

<style lang="scss">
  .sidebar {
  }
  .meta {
    margin-bottom: 20px;

    &_logotype {
      margin-bottom: 10px;
      .logotype {
        width: 100%;

        @media screen and (max-width: 840px) {
          width: 75%;
        }
      }
    }
    &_item {
      margin-bottom: 5px;
      &:last-child {
        margin-bottom: 0;
      }

      font-weight: bold;

      &-date {
        color: var(--primary-color);
        font-size: 1.5em;
      }
    }
  }
</style>
