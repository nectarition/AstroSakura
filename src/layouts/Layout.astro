---
import Root from "./Root.astro";
import Sidebar from "./Sidebar.astro";
import Footer from "./Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Root title={title}>
  <div class="container">
    <div class="content">
      <nav>
        <Sidebar />
      </nav>
      <main>
        <slot />
      </main>
    </div>
    <footer>
      <Footer />
    </footer>
  </div>
</Root>

<style lang="scss">
  .container {
    height: 100%;
    display: grid;
    grid-template-rows: 1fr auto;
  }
  .content {
    padding: 40px 10%;
    display: grid;
    grid-template-columns: 25% 1fr;
    gap: 40px;

    @media screen and (max-width: 840px) {
      padding: 20px;
      grid-template-columns: auto;
      grid-template-rows: auto 1fr;
      gap: 20px;
    }
  }

  nav {
    @media screen and (max-width: 840px) {
      position: unset;
      margin-bottom: 20px;
    }
  }

  main {
    padding: 40px;
    background-color: #ffffff;
    @media screen and (max-width: 840px) {
      margin: -20px;
      padding: 20px;
      min-height: 75vh;
    }
  }
  footer {
  }
</style>
